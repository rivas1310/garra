# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/garras_felinas"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Proveedores de autenticación
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Sentry (Monitoreo de errores)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_API_SECRET="your-ga-api-secret"

# Configuración de email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@garrasfelinas.com"

# Configuración de pagos (Stripe/PayPal)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Configuración de almacenamiento (AWS S3, Cloudinary, etc.)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# URLs de la aplicación
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Configuración de cookies
COOKIE_DOMAIN="localhost"
COOKIE_SECURE="false"

# Configuración de rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Configuración de cache
REDIS_URL="redis://localhost:6379"

# Configuración de webhooks
WEBHOOK_URL="https://your-webhook-url.com/webhook"

# Configuración de desarrollo
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"

# Configuración de SEO
NEXT_PUBLIC_SITE_NAME="Garras Felinas"
NEXT_PUBLIC_SITE_DESCRIPTION="Tienda online de productos para gatos"
NEXT_PUBLIC_SITE_URL="https://garrasfelinas.com"

# Configuración de redes sociales
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/garrasfelinas"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/garrasfelinas"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/garrasfelinas"

# Configuración de notificaciones push
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@garrasfelinas.com"

# Configuración de monitoreo
UPTIME_ROBOT_API_KEY="your-uptimerobot-api-key"
HEALTH_CHECK_SECRET="your-health-check-secret"

# Configuración de logs
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Configuración de backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Configuración de CDN
CDN_URL="https://cdn.garrasfelinas.com"

# Configuración de búsqueda (Algolia, Elasticsearch, etc.)
ALGOLIA_APP_ID="your-algolia-app-id"
ALGOLIA_API_KEY="your-algolia-api-key"
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY="your-algolia-search-key"

# Configuración de chat/soporte
INTERCOM_APP_ID="your-intercom-app-id"
ZENDESK_SUBDOMAIN="your-zendesk-subdomain"

# Configuración de analytics adicionales
HOTJAR_ID="your-hotjar-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# Configuración de testing
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/garras_felinas_test"
CYPRESS_BASE_URL="http://localhost:3000"

# Configuración de deployment
VERCEL_URL="your-vercel-url"
NETLIFY_SITE_ID="your-netlify-site-id"

# Configuración de seguridad
CSRF_SECRET="your-csrf-secret"
ENCRYPTION_KEY="your-encryption-key"
JWT_SECRET="your-jwt-secret"

# Configuración de features flags
FEATURE_BETA_CHECKOUT="false"
FEATURE_ADVANCED_SEARCH="true"
FEATURE_LOYALTY_PROGRAM="false"