{
  "name": "garras-felinas-admin-desktop",
  "version": "1.0.0",
  "description": "Panel de Administración de Garras Felinas - Aplicación de Escritorio",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "npm run build:win",
    "pack": "electron-builder --dir",
    "package:win": "electron-packager . \"Garras Felinas Admin\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icon.png"
  },
  "keywords": [
    "electron",
    "admin",
    "garras-felinas",
    "ecommerce"
  ],
  "author": "Garras Felinas",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.garrasfelinas.admin",
    "productName": "Garras Felinas Admin",
    "directories": {
      "output": "dist"
    },
    "compression": "store",
    "npmRebuild": false,
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Garras Felinas Admin"
    }
  }
}
